# Основные настройки
ENVIRONMENT=development
DEBUG=true

# База данных
DATABASE_URL=postgresql://tot_user:tot_password@localhost:5432/tot_mvp
POSTGRES_DB=tot_mvp
POSTGRES_USER=tot_user
POSTGRES_PASSWORD=tot_password

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=24h

# API Gateway
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0

# Сервисы порты
USER_SERVICE_PORT=8001
PROFILE_SERVICE_PORT=8002
BOOKING_SERVICE_PORT=8003
GEO_SERVICE_PORT=8004
PAYMENT_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
CHAT_SERVICE_PORT=8007
RATING_SERVICE_PORT=8008
EVENT_SERVICE_PORT=8009
EMERGENCY_SERVICE_PORT=8010
SECURITY_SERVICE_PORT=8011

# Геолокация
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key
YANDEX_MAPS_API_URL=https://geocode-maps.yandex.ru/1.x/

# Платежи (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Уведомления
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id

# SMS и звонки (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Видеозвонки (Agora)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Файловое хранилище (S3 совместимое)
S3_ENDPOINT=your-s3-endpoint
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET=tot-mvp-files
S3_REGION=ru-central1

# Мониторинг
PROMETHEUS_PORT=9090
GRAFANA_PORT=3004

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=json

# Безопасность
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# Кэширование
CACHE_TTL=3600
SESSION_TTL=86400

# Модерация
AUTO_MODERATION_ENABLED=true
BLACKLIST_CHECK_ENABLED=true

# Аналитика
ANALYTICS_ENABLED=true
ANALYTICS_SERVICE_URL=http://localhost:8012

# Тестирование
TEST_DATABASE_URL=postgresql://tot_user:tot_password@localhost:5432/tot_mvp_test
TEST_REDIS_URL=redis://localhost:6379/1 
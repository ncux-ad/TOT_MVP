{
  "name": "tot-mvp",
  "version": "1.0.0",
  "description": "ТОТ – Твоя Точка Опоры (MVP)",
  "private": true,
  "workspaces": [
    "backend/*",
    "frontend/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "docker-compose up backend",
    "dev:frontend": "concurrently \"npm run dev:patient-app\" \"npm run dev:admin-panel\"",
    "dev:patient-app": "cd frontend/patient-app && npm run dev",
    "dev:doctor-app": "cd frontend/doctor-app && npm run dev",
    "dev:clinic-web": "cd frontend/clinic-web && npm run dev",
    "dev:admin-panel": "cd frontend/admin-panel && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "docker-compose build backend",
    "build:frontend": "npm run build:patient-app && npm run build:admin-panel",
    "build:patient-app": "cd frontend/patient-app && npm run build",
    
    "build:admin-panel": "cd frontend/admin-panel && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && python -m pytest",
    "test:frontend": "npm run test:patient-app && npm run test:admin-panel",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && flake8",
    "lint:frontend": "eslint frontend/**/*.{js,jsx,ts,tsx}",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "setup": "npm install && npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "setup:frontend": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/tot-mvp.git"
  },
  "keywords": [
    "healthcare",
    "doctor-on-demand",
    "telemedicine",
    "react-native",
    "fastapi",
    "microservices"
  ],
  "author": "ТОТ Team",
  "license": "MIT",
  "dependencies": {
    "react-scripts": "^0.0.0"
  }
}
